import "time"

# Validate time is between 8 AM and 8 PM
valid_time = rule { time.now.hour >= 8 and time.now.hour < 20 }

# Validate day is M - Sa
valid_day = rule {
    time.now.weekday_name in ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"]
}

main = rule { valid_time and valid_day }
